<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="tutored"
            type="mz.org.csaude.mentoring.model.tutored.Tutored" />
        <variable
            name="selected"
            type="Boolean" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:backgroundTint="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tutored_item_back"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_person"
                android:layout_alignParentStart="true"
                android:background="@drawable/circle_bg_light"
                android:padding="8dp" />

            <LinearLayout
                android:layout_toEndOf="@id/imgProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/menteeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{tutored.employee.fullName}"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/menteeRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{tutored.employee.professionalCategory.description}"
                    android:textColor="@color/input_labels"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/menteePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{"NUIT: " + tutored.employee.nuit}'
                    android:textColor="@color/input_labels"
                    android:textSize="13sp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/checkIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:checked="@{tutored.selected}" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
