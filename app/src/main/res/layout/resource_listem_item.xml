<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="node"
            type="mz.org.csaude.mentoring.model.resourceea.Node" />
        
        <variable
            name="resourceVM"
            type="mz.org.csaude.mentoring.viewmodel.resource.ResourceVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:background="@drawable/ronda_item_back"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:padding="2dp">

            <TextView
                android:id="@+id/txtv_service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_weight="0"
                android:text="@{node.program}"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:textStyle="bold" />

            </LinearLayout>
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_dark"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ronda_item_back"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_8dp"
                        android:gravity="center_vertical"
                        android:text="@{node.resource}"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@{node.subCategory}"
                        android:textColor="@color/red"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:padding="2dp">

                <ImageButton
                    android:id="@+id/icon_check_done"
                    android:layout_width="20dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_4dp"
                    android:layout_weight="3"
                    android:background="@android:color/holo_green_light"
                    android:scaleType="fitXY"
                    android:src="@drawable/baseline_cloud_upload_24"
                    android:textSize="@dimen/dimen_20dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</layout>