<resources>
    <!-- Base application theme. -->
    <style name="Theme.Mentoring" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Mentoring.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Mentoring.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Mentoring.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="input_labels">
        <item name="android:textColor">@color/input_labels</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_10dp</item>
        <item name="android:padding">@dimen/dimen_4dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_6dp</item>
    </style>

    <style name="login_text_style">
        <item name="android:textColor">@color/input_labels</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_12dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_5dp</item>
    </style>

    <style name="login_app_name_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_30dp</item>
    </style>

    <style name="splash_app_name_style">
        <item name="android:textColor">#0288d1</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_30dp</item>
    </style>

    <style name="bottom_border_edit_text_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bottom_border_edit_text_border</item>
        <item name="android:paddingLeft">@dimen/dimen_15dp</item>
        <item name="android:paddingRight">@dimen/dimen_15dp</item>
        <item name="android:paddingTop">@dimen/dimen_6dp</item>
        <item name="android:paddingBottom">@dimen/dimen_6dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_2dp</item>
    </style>

    <style name="bottom_spinner_style" parent="android:Widget.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_normal</item>
        <item name="android:paddingTop">@dimen/dimen_5dp</item>
        <item name="android:paddingBottom">@dimen/dimen_5dp</item>
        <item name="android:paddingLeft">@dimen/dimen_8dp</item>
        <item name="android:paddingRight">@dimen/dimen_50dp</item>
        <item name="android:popupBackground">@color/spinner_back_color</item>
        <item name="android:layout_marginBottom">@dimen/dimen_5dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="login_spinner_style" parent="android:Widget.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_spinner_back</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="spinner_style" parent="android:Widget.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_spinner_back</item>
        <item name="android:paddingTop">@dimen/dimen_5dp</item>
        <item name="android:paddingBottom">@dimen/dimen_5dp</item>
        <item name="android:paddingLeft">@dimen/dimen_8dp</item>
        <item name="android:paddingRight">@dimen/dimen_50dp</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="spinner_label">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">sans</item>
        <item name="background">@color/white</item>
    </style>

    <style name="listble_header">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_12dp</item>
        <item name="android:padding">@dimen/dimen_4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical|center</item>
    </style>

    <style name="listble_content">
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_12dp</item>
        <item name="android:padding">@dimen/dimen_4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>
</resources>